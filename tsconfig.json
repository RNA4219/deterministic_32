{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "src",
    "tests",
    "scripts",
    "frontend/src",
    "frontend/tests",
    "./*.test.ts"
  ]
}
