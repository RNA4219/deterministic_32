{
  "name": "deterministic-32",
  "version": "0.1.0",
  "description": "Deterministic 32-way categorizer (stable hashing, normalization, overrides, labels) for TypeScript/JS.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./cli": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "cat32": "dist/cli.js",
    "deterministic-32": "dist/cli.js"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "size": "npm run build && node dist/scripts/check-size.js",
    "bench": "npm run build && node dist/scripts/bench.js",
    "test": "npm run build && node scripts/run-tests.js",
    "prepare": "npm run build",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" \"frontend/**/*.ts\" \"frontend/src/**/*.ts\" \"frontend/tests/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "deterministic",
    "hash",
    "categorize",
    "bucketing",
    "consistent",
    "32"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "json": "file:reporters/json",
    "typescript": "5.9.3"
  }
}
